rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Plans Collection (Public Read, Auth Write for seeding)
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAuthenticated(); 
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || false); // Add isAdmin check later
      allow write: if isAuthenticated(); // Temporary: Allow any auth user to update (for Admin Approval test)
    }

    // --- Tenants Collection ---
    // Allow any authenticated user to create a tenant (business setup)
    // Allow reading/updating for now (will tighten later)
    match /tenants/{tenantId} {
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // --- Other Collections (Products, Bills, Patients, etc.) ---
    // Temporary Open Rules: Allow all authenticated users to read/write
    // TODO: Implement strict RBAC with Custom Claims or User Doc lookups before production
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
