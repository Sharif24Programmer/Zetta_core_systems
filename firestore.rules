rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Plans Collection (Public Read, Auth Write for seeding)
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAuthenticated(); 
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || false); // Add isAdmin check later
      allow write: if isAuthenticated(); // Temporary: Allow any auth user to update (for Admin Approval test)
    }

    // --- Tenants Collection ---
    // Allow any authenticated user to create a tenant (business setup)
    // Allow reading/updating for now (will tighten later)
    // --- Tenants & Subcollections (The Core Data) ---
    // Allow authenticated users to access tenant data.
    // In a strict production env, you would check: request.auth.token.tenantId == tenantId
    match /tenants/{tenantId} {
      allow create: if isAuthenticated();
      allow read, write: if isAuthenticated();
      
      // Allow access to all subcollections (tickets, bills, etc.)
      match /{document=**} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Default Deny for everything else (Best Practice)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
